{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pavotify",
  "version": "1.0.0",
  "identifier": "com.pavotify.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pavotify - Music Downloader",
        "width": 500,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "minWidth": 400,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Pavotify es un descargador de música elegante y fácil de usar que te permite descargar tus canciones favoritas de Spotify.",
    "shortDescription": "Descargador de música elegante"
  },
  "plugins": {
    "dialog": null,
    "shell": {
      "open": true
    }
  }
}
